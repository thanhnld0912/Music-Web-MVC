@using MusicWebMVC.Models
@model IEnumerable<MusicWebMVC.Models.Post>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/globalplayer.css">
    <title></title>
</head>
<body>
    <div id="global-player">
        <div class="player-left">
            <div class="album-cover album-rotating">
                <img id="global-album-cover" src="~/img/default-album.jpg" alt="Album Cover">
            </div>
            <div class="song-info">
                <div id="global-song-title" class="song-title">Không có bài hát nào đang phát</div>
                <div id="global-song-artist" class="song-artist">Nghệ sĩ không xác định</div>
                <div id="global-playlist-name" class="playlist-info">No playlist</div>
            </div>
        </div>
        <div class="player-center">
            <div class="player-controls">
                <button class="control-button" id="btn-previous">
                    <i class="fas fa-step-backward"></i>
                </button>
                <button class="control-button" id="btn-replay">
                    <i class="fas fa-redo"></i>
                </button>
                <button class="play-pause-button" id="btn-play-pause">
                    <i class="fas fa-play" id="play-pause-icon"></i>
                </button>
                <button class="control-button" id="btn-next">
                    <i class="fas fa-step-forward"></i>
                </button>
            </div>
            <div class="progress-container" id="global-progress-container">
                <div class="progress-bar" id="global-progress-bar"></div>
            </div>
            <div class="time-info">
                <span id="current-time">0:00</span>
                <span id="total-time">0:00</span>
            </div>
        </div>
        <div class="player-right">
            <div class="volume-container">
                <i class="fas fa-volume-up volume-icon" id="volume-icon"></i>
                <input type="range" min="0" max="1" step="0.01" value="1" class="volume-slider" id="global-volume-slider">
            </div>
            <!-- Close button added here -->
            <button id="btn-close-player" class="close-button">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <audio id="global-audio" style="display: none;"></audio>
    </div>
    <script src="globalplayer.js"></script>
</body>
</html>