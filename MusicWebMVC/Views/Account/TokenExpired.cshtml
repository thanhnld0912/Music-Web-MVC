// Views/Account/TokenExpired.cshtml
@{
    ViewData["Title"] = "Token Expired";
}

<h2>Email Confirmation Token Expired</h2>

<div class="alert alert-warning">
    <p>The email confirmation link has expired. Please request a new confirmation email by clicking the button below.</p>
</div>

<form asp-action="ResendConfirmationEmail" method="post">
    <input type="hidden" name="userId" value="@ViewBag.UserId" />
    <button type="submit" class="btn btn-primary">Resend Confirmation Email</button>
</form>