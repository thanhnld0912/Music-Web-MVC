                    @*         <button class="btn delete">Delete</button> *@
                    @*         <button class="btn disable">Disable</button> *@
                    @*         <button class="btn more">More</button> *@
                    @*     </td> *@
                    @* </tr> *@
                    @* <tr> *@
                    @*     <td>3</td> *@
                    @*     <td>User3</td> *@
                    @*     <td><strong>User3@gmail.com</strong></td> *@
                    @*     <td>98</td> *@
